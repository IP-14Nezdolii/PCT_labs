        {
            "label": "Kill Java Processes",
            "type": "shell",
            "command": "taskkill /F /IM java.exe",
            "problemMatcher": []
        },
        {
            "label": "Run daemon",
            "type": "shell",
            "command": "mpjdaemon.bat -boot",
            "problemMatcher": []
        },
        {
            "label": "Stop daemon",
            "type": "shell",
            "command": "mpjdaemon.bat -halt",
            "problemMatcher": []
        }
    ]
}