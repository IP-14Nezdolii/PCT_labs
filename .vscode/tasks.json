{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Project",
            "type": "shell",
            "command": "mvn clean compile",
            "dependsOn": ["Kill Java Processes"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}\\lab6"
            }
        },
        {
            "label": "Run MPJ App",
            "type": "shell",
            "command": "mpjrun.bat -np 10 -dev niodev -machinesfile C:\\Users\\vladi\\.vscode\\Git\\PCT\\PCT_labs\\.vscode\\machines com.example.App",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}\\lab6\\target\\classes"
            },
            "dependsOn": ["Run daemons"],
            "problemMatcher": []
        },
